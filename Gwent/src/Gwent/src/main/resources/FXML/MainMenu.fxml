<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.MainMenu">
    <center>
        <VBox alignment="CENTER" maxWidth="300" spacing="10">
            <Label fx:id="Username" text="Default" />
            <Button onMouseEntered="#mouseEnteredSound" onMouseClicked="#goToProfileMenu" text="Profile menu" minWidth="180" minHeight="50"/>
            <Button onMouseEntered="#mouseEnteredSound" onMouseClicked="#startNewGame" text="Start new game" minWidth="180" minHeight="50"/>
            <Button onMouseEntered="#mouseEnteredSound" onMouseClicked="#Logout" text="Log out" minWidth="180" minHeight="50"/>
            <Button onMouseEntered="#mouseEnteredSound" onMouseClicked="#exitGame" text="Exit game" />
        </VBox>
    </center>

</BorderPane>
